{
  "name": "wallpaper-app",
  "version": "0.1.3",
  "description": "A wallpaper application built with Electron and Vue.js, featuring a Python backend for weather API and time analysis, along with AI image generation.",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "vue-cli-service build",
    "serve": "vue-cli-service serve",
    "electron:serve": "electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^6.5.10",
    "socket.io-client": "^4.8.1",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-typescript": "^5.0.0",
    "@vue/cli-service": "^5.0.0",
    "@vue/compiler-sfc": "^3.5.16",
    "electron": "^13.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^4.0.0",
    "vue-loader": "^16.0.0",
    "webpack-dev-middleware": "^5.3.3"
  },
  "build": {
    "appId": "com.example.wallpaperapp",
    "productName": "AI_Wallpaper",
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "!dist/static/live2d/**/*",
      "electron/*.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/app.exe",
        "to": "backend/app.exe"
      },
      {
        "from": "backend/static/wallpapers/default.jpg",
        "to": "backend/static/wallpapers/default.jpg"
      },
      {
        "from": "wallpaper_hoster/WallpaperHosterLively/out",
        "to": "wallpaper_hoster/WallpaperHosterLively/out",
        "filter": [
          "!*.pdb"
        ]
      },
      {
        "from": "src/assets/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "electron/wallpaper_config.json",
        "to": "wallpaper_config.json"
      },
      {
        "from": "public/static/live2d",
        "to": "static/live2d"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    }
  },
  "author": "",
  "license": "ISC"
}
